{
  "manifest_version": 2,
  "name": "Topical",
  "version": "0.1",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["jquery.min.js", "content.js"]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["jquery.min.js","background.js"]
  },
  "permissions": [
    "http://play-hackmit.rhcloud.com/*",
    "http://localhost/*"
  ],
  "icons": {
    "256": "icon.png"
  }
}

